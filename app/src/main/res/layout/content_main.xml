<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.praveer_rai.phrases.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good &#10; morning"
            android:id="@+id/gutenmorgen"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:onClick="buttonPressed"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good day"
            android:id="@+id/gutentag"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:onClick="buttonPressed"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good night"
            android:id="@+id/gutenacht"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:onClick="buttonPressed"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you"
            android:id="@+id/danke3"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:onClick="buttonPressed"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lets go"
            android:id="@+id/gehenwir"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:onClick="buttonPressed"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excuse me"
            android:id="@+id/entschuldigensie"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:onClick="buttonPressed"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See you &#10; later"
            android:id="@+id/bisspaeter"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="fill"
            android:onClick="buttonPressed"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pleased to &#10; meet you"
            android:id="@+id/esfreutmich"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="fill"
            android:onClick="buttonPressed"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

    </GridLayout>
</RelativeLayout>
